<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/row_player_info_border"
        android:id="@+id/itemClub">

        <TextView
            android:id="@+id/tvClubName"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Đội Bóng"
            android:textColor="@color/black"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/tvClubId"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã Đội Bóng"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tvStadium"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sân nhà"
            android:textColor="@color/black"
            android:layout_weight="2"/>
    </LinearLayout>
</layout>