<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/row_club_border"
        android:id="@+id/itemClub">

        <TextView
            android:id="@+id/tvClubName"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tên Đội Bóng"
            android:textColor="@color/black"
            android:layout_weight="2"
            android:ellipsize="end"
            android:maxLines="1"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000" />
        <TextView
            android:id="@+id/tvClubMemNum"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Số lượng cầu thủ"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000" />
        <TextView
            android:id="@+id/tvStadium"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sân nhà"
            android:textColor="@color/black"
            android:layout_weight="2"
            android:ellipsize="end"
            android:maxLines="1"/>
    </LinearLayout>
</layout>